public class AttractiveProgram {
    public static void main(String[] args) {
        String title = "Welcome to My Attractive Java Program!";
        String separator = "=".repeat(title.length());

        System.out.println(separator);
        System.out.println(title);
        System.out.println(separator);
        System.out.println();

        System.out.println("Let's create a pattern:");

        int size = 5;
        for (int i = 1; i <= size; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.print(j + " ");
            }
            System.out.println();
        }

        System.out.println();
        System.out.println("Pattern creation complete!");

        System.out.println();
        System.out.println(separator);
        System.out.println("Thank you for using My Attractive Java Program!");
        System.out.println(separator);
    }
}
